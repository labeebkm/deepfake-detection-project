# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text eol=lf
*.pyw text eol=lf

# Configuration files
*.yaml text eol=lf
*.yml text eol=lf
*.json text eol=lf
*.toml text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Markdown files
*.md text eol=lf

# Jupyter Notebooks (treat as text, but be careful with merges)
*.ipynb text eol=lf

# Binary files
*.h5 binary
*.hdf5 binary
*.pb binary
*.ckpt binary
*.pth binary
*.pt binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.mp4 binary
*.avi binary

# Large files (use Git LFS if needed)
*.zip filter=lfs diff=lfs merge=lfs -text
*.tar.gz filter=lfs diff=lfs merge=lfs -text

